{
    "name": "@falkan3/courier",
    "version": "1.1.0",
    "description": "A flexible, easy to use and configurable chat foundation. Can be used as a virtual assistant which allows clients to interact with a website using preselected topics, or as a websocket based chat scaffolding.",
    "author": "Adam KociÄ‡ (Falkan3)",
    "homepage": "https://github.com/Falkan3/courier#readme",
    "main": "dist/js/courier.js",
    "module": "dist/js/courier.esm.js",
    "unpkg": "dist/js/courier.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Falkan3/courier.git"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/@Falkan3"
    },
    "bugs": {
        "url": "https://github.com/Falkan3/courier/issues"
    },
    "license": "MIT",
    "keywords": [
        "chat",
        "bot",
        "assistant",
        "plugin"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "test": "jest \"tests/.*/.*\\.test\\.js\" --config jest.config.js",
        "lint": "eslint {src,tests}/**/*.js",
        "lint:base": "eslint src tests",
        "lint:fix": "eslint {src,tests}/**/*.js --fix",
        "stylelint": "stylelint src/assets/scss",
        "stylelint:fix": "stylelint src/assets/scss --fix",
        "scss:core": "sass src/assets/scss/courier.core.scss dist/css/courier.core.css && sass src/assets/scss/courier.core.scss dist/css/courier.core.min.css --style=compressed",
        "scss:theme": "sass src/assets/scss/courier.theme.scss dist/css/courier.theme.css && sass src/assets/scss/courier.theme.scss dist/css/courier.theme.min.css --style=compressed",
        "build:css": "npm run scss:core && npm run scss:theme",
        "build:esm": "rollup --config build/esm.js && rollup --config build/esm.modular.js",
        "build:umd": "rollup --config build/umd.js && rollup --config build/umd.min.js",
        "build:js": "npm run build:esm && npm run build:umd",
        "build": "npm run build:css && npm run build:js",
        "build--deprecated": "cross-env BABEL_ENV=production babel src --out-dir dist",
        "prepublish": "npm run clean && npm run test && npm run build"
    },
    "watch": {
        "test": "{src,tests}/**/*.js",
        "build:js": "src/**/*.js",
        "build:css": "assets/**/*.scss"
    },
    "files": [
        "src",
        "dist"
    ],
    "devDependencies": {
        "@babel/cli": "^7.12.8",
        "@babel/core": "^7.12.9",
        "@babel/eslint-parser": "^7.15.8",
        "@babel/plugin-external-helpers": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-flow-strip-types": "^7.12.1",
        "@babel/plugin-transform-object-assign": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.15.8",
        "@babel/preset-env": "^7.12.7",
        "@babel/register": "^7.12.1",
        "@glidejs/glide": "^3.4.1",
        "babel-jest": "^27.2.4",
        "babel-plugin-add-module-exports": "^1.0.4",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-minify": "^0.5.0",
        "chai": "^4.3.4",
        "core-js": "^3.18.2",
        "cross-env": "^7.0.3",
        "eslint": "^7.32.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.26.1",
        "jest": "^27.0.0",
        "jsdom": "^17.0.0",
        "npm-watch": "^0.11.0",
        "nyc": "^15.1.0",
        "reefjs": "10.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^1.15.3",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-uglify": "^5.0.2",
        "sass": "^1.42.1",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-scss": "^3.13.0",
        "throttle-debounce": "^3.0.1"
    },
    "abandonedDependencies": {
        "xstream": "^11.12.0",
        "@cycle/dom": "^22.7.0",
        "@cycle/run": "^5.4.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "yargs": "^16.1.1",
        "@babel/plugin-transform-runtime": "^7.12.1"
    },
    "directories": {
        "test": "tests"
    }
}
