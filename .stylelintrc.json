{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "else",
          "for",
          "return",
          "warn",
          "mixin",
          "extend",
          "use",
          "include",
          "content"
        ]
      }
    ]
  }
}
